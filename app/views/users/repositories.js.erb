$('#user-repositories').append('<%= link_to "Recommend Me Repositories", recommend_path, class: "recommend-btn btn btn-success btn-large btn-block", remote: true %>');
<% @repositories.each do |repo| %>
  $('#user-repositories').append("<%= escape_javascript(render partial: 'repository', locals: { repository: repo }) %>")
<% end %>
$('#user-repositories-loading').remove();
