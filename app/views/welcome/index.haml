.col-md-12
  .col-md-6.col-md-offset-3
    %h1.text-center
      Welcome to GitRecommender
      = octicon("mark-github", true)
      %hr
  .col-md-10.col-md-offset-1.margin-bottom
    %h2.text-center.margin-bottom
      The Process
    .col-md-3.text-center
      %span.glyphicon.glyphicon-user.welcome-icon
      %br
      %h5 Give us your GitHub username
    .col-md-3.text-center
      %span.glyphicon.glyphicon-console.welcome-icon
      %br
      %h5 Specify some keywords
    .col-md-3.text-center
      = octicon("repo", true, "welcome-octicon")
      %br
      %h5 Receive a list of repos
    .col-md-3.text-center
      = octicon("heart", true, "welcome-octicon")
      %br
      %h5 Enjoy the recommendations
  .col-md-4.col-md-offset-4
    = link_to "Get Started", @authorization_url, class: "btn btn-success btn-large btn-block"
